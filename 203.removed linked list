/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     ListNode *next;
 *     ListNode(int x) : val(x), next(NULL) {}
 * };
 */
class Solution {
public:
    ListNode* removeElements(ListNode* head, int val) {
        if(!head)
        return head;
         while(head->val==val)
       {   head=head->next;
           if(head==NULL)  return head;
       }
        
        
        
        ListNode*prev=head,*curr=head->next;
        while(curr!=NULL)
        {
            if(curr->val==val)
            {
                prev->next=curr->next;
                curr=prev->next;
            }
            else
            { curr=curr->next;
            prev=prev->next;}
        }
            
        
    return head;}
};
